<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/gameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal|fill_vertical"
            android:scaleType="matrix">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/topCont"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/turnName"
            android:id="@+id/turnName"
            android:editable="false"
            android:layout_margin="2dp"
            android:layout_gravity="center|fill"
            android:layout_alignParentLeft="true"
            android:focusable="false"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:id="@+id/p1left"
            android:editable="false"
            android:layout_margin="2dp"
            android:layout_gravity="center|fill"
            android:layout_toRightOf="@id/turnName"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/left"
            android:id="@+id/p2left"
            android:editable="false"
            android:layout_margin="2dp"
            android:layout_gravity="center|fill"
            android:layout_toRightOf="@id/p1left"/>
    </LinearLayout>
    <RadioGroup
                  android:layout_alignBottom="@id/topCont"
                  android:orientation="horizontal"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id = "@+id/radio_bar"/>
    <!-- <include layout = "@layout/game_canvas" /> -->

</RelativeLayout>